class Solution {
    public int minDepth(TreeNode root) {
        if(root == null){
            return 0;
        }

        if(root.left == null){
            return minDepth(root.right)+1;
        }
        if(root.right == null){
            return minDepth(root.left)+1;
        }

        int lh = minDepth(root.left);
        int rh = minDepth(root.right);

        return Math.min(lh,rh) +1;
    }
}
